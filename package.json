    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "jsdom": "^27.4.0",
    "shadcn-vue": "^2.4.3",
    "tslib": "^2.8.1",
    "tw-animate-css": "^1.4.0",
