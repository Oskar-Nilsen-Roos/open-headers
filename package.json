  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build && bun run copy-manifest",
    "build:watch": "vite build --watch",
    "copy-manifest": "cp public/manifest.json dist/manifest.json && cp -r public/icons dist/ && mkdir -p dist/_locales && cp -r src/i18n/locales/* dist/_locales/",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@tailwindcss/vite": "^4.1.18",
    "@vueuse/core": "^14.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "culori": "^4.0.2",
    "lucide-vue-next": "^0.563.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.8.0",
    "swapy": "^1.0.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/chrome": "^0.1.36",
    "@types/culori": "^4.0.1",
    "@types/node": "^24.10.1",
